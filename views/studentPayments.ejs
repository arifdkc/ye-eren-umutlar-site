<!DOCTYPE html>
<html lang="tr">
<head>
  <%- include("partials/head", { title: student.name + " - Ödeme Planı" }) %>
    <link rel="stylesheet" href="/css/studentPayments.css"> 
</head>
<body>
      <%- include("partials/navbar") %>

    <main class="main-container container">
        <header class="page-header">
            <h1><%= student.name %> - Ödeme Planı</h1>
            <h3>Sınıf: <%= student.className %></h3>
        </header>

        <% if (user.role === 'admin') { %>
            <section class="card add-payment-section">
                <h2><i class="fas fa-plus-circle"></i> Yeni Ödeme Ekle</h2>
                <form action="/admin/student-payments/add" method="POST" class="add-payment-form">
                    <input type="hidden" name="studentId" value="<%= student._id %>">

                    <div class="form-group">
                        <label for="month">Ay:</label>
                        <input type="month" name="month" id="month" required>
                    </div>

                    <div class="form-group">
                        <label for="amount">Tutar (TL):</label>
                        <input type="number" name="amount" id="amount" required min="0">
                    </div>

                    <div class="form-group">
                        <label for="dueDate">Son Ödeme Tarihi:</label>
                        <input type="date" name="dueDate" id="dueDate">
                    </div>

                    <div class="form-group">
                        <label for="status">Durum:</label>
                        <select name="status" id="status" required>
                            <option value="paid">Ödendi</option>
                            <option value="unpaid">Ödenmedi</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Ekle</button>
                </form>
            </section>
        <% } %>

        <section class="card payment-details-section">
            <div class="table-responsive">
                <table class="payment-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-calendar-alt"></i> Ay</th>
                            <th><i class="fas fa-lira-sign"></i> Tutar</th>
                            <th><i class="fas fa-info-circle"></i> Durum</th>
                            <th><i class="fas fa-calendar-day"></i> Son Ödeme Tarihi</th>
                            <% if (user.role === 'admin') { %>
                                <th><i class="fas fa-cogs"></i> İşlem</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(payments.length === 0) { %>
                            <tr>
                                <td colspan="<%= user.role === 'admin' ? 5 : 4 %>" class="empty-table-message">Henüz ödeme eklenmemiş.</td>
                            </tr>
                        <% } else { %>
                            <% payments.forEach(payment => { %>
                                <tr>
                                    <td data-label="Ay"><%= new Date(payment.month).toLocaleString('tr-TR', { month: 'long', year: 'numeric' }) %></td>
                                    <td data-label="Tutar"><%= payment.amount %> TL</td>
                                    <td data-label="Durum" class="status-cell status-<%= payment.status %>">
                                        <i class="fas <%= payment.status === 'paid' ? 'fa-check-circle' : 'fa-times-circle' %>"></i>
                                        <%= payment.status === 'paid' ? 'Ödendi' : 'Ödenmedi' %>
                                    </td>
                                    <td data-label="Son Ödeme Tarihi"><%= new Date(payment.dueDate).toLocaleDateString('tr-TR') %></td>
                                    <% if(user.role === 'admin') { %>
                                        <td data-label="İşlem" class="action-cell">
                                            <form action="/admin/student-payments/<%= payment._id %>/update" method="POST">
                                                <select name="status" class="status-select">
                                                    <option value="paid" <%= payment.status === 'paid' ? 'selected' : '' %>>Ödendi</option>
                                                    <option value="unpaid" <%= payment.status === 'unpaid' ? 'selected' : '' %>>Ödenmedi</option>
                                                </select>
                                                <button type="submit" class="btn btn-update"><i class="fas fa-edit"></i> Güncelle</button>
                                            </form>
                                        </td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
    <script src="/js/scripts.js"></script>
</body>
</html>