<!DOCTYPE html>
<html lang="tr">
<head>
 <%- include("partials/head") %>
    <link rel="stylesheet" href="/css/payments.css"> 
</head> 
<body> 
    
    <div class="container payment-plan-container">
        <header class="payment-header">
            <h1><%= student.name %> - Ödeme Planı</h1>
            <p>Sınıf: <%= student.className %></p>
        </header>

        <section class="payment-table-section card">
            <div class="table-responsive">
                <table class="payment-table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-calendar-alt"></i> Ay</th>
                            <th><i class="fas fa-lira-sign"></i> Tutar</th>
                            <th><i class="fas fa-info-circle"></i> Durum</th>
                            <th>Son Ödeme Tarihi</th>
                            <% if (user.role === 'admin') { %>
                                <th><i class="fas fa-cogs"></i> İşlem</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(payments.length === 0) { %>
                            <tr>
                                <td colspan="<%= user.role === 'admin' ? 4 : 3 %>" class="empty-table-message">Henüz ödeme eklenmemiş.</td>
                            </tr>
                        <% } else { %>
                            <% payments.forEach(payment => { %>
                                <tr>
                                    <td data-label="Ay"><%= new Date(payment.month).toLocaleString('tr-TR', { month: 'long', year: 'numeric' }) %></td>
                                    <td data-label="Tutar"><%= payment.amount %> TL</td>
                                    <td data-label="Son Ödeme Tarihi"><%= new Date(payment.dueDate).toLocaleDateString('tr-TR') %></td>
                                    <td data-label="Durum" class="payment-status status-<%= payment.status %>">
                                        <i class="fas <%= payment.status === 'paid' ? 'fa-check-circle' : 'fa-times-circle' %>"></i>
                                        <%= payment.status === 'paid' ? 'Ödendi' : 'Ödenmedi' %>
                                    </td>
                                    <% if(user.role === 'admin') { %>
                                        <td data-label="İşlem" class="payment-action">
                                            <form action="/admin/student-payments/<%= payment._id %>/update" method="POST">
                                                <select name="status" class="status-select">
                                                    <option value="paid" <%= payment.status === 'paid' ? 'selected' : '' %>>Ödendi</option>
                                                    <option value="unpaid" <%= payment.status === 'unpaid' ? 'selected' : '' %>>Ödenmedi</option>
                                                </select>
                                                <button type="submit" class="btn btn-update">Güncelle</button>
                                            </form>
                                        </td>
                                    <% } %>
                                </tr>
                            <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </div>
    <script src="/js/scripts.js"></script>
</body>
</html>