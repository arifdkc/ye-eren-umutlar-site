<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include("partials/head") %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <main class="container">
        <section class="announcements-section text-announcements">
            <h2>Duyurular</h2>
            <ul class="announcement-list">
                <% announcements.forEach(a => { %>
                    <li class="announcement-item">
                        <div class="announcement-content">
                            <p><%= a.text %></p>
                        </div>
                        <form action="/announcement/<%= a._id %>/" method="POST" class="delete-form">
                            <button type="submit" class="delete-button" onclick="return confirm('Bu duyuruyu silmek istediğine emin misin?')">
                                <i class="fas fa-trash-alt"></i> Sil
                            </button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </section>
        
        <section class="announcements-section image-announcements">
            <h2>Etkinlikler</h2>
            <ul class="announcement-list">
                <% announcementsIMG.forEach(a => { %>
                    <li class="announcement-item image-item">
                        <div class="announcement-content">
                            <strong><%= a.title %></strong>
                            <p><%= a.description %></p>
                            <% if(a.image){ %>
                                <div class="announcement-image-container">
                                    <img src="/uploads/<%= a.image %>" alt="<%= a.title %>">
                                </div>
                            <% } %>
                        </div>
                        <form action="/announcementIMG/<%= a._id %>" method="POST" class="delete-form">
                            <button type="submit" class="delete-button" onclick="return confirm('Bu görselli duyuruyu silmek istediğine emin misin?')">
                                <i class="fas fa-trash-alt"></i> Sil
                            </button>
                        </form>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>
    
    <%- include("partials/footer") %>
</body>
</html>